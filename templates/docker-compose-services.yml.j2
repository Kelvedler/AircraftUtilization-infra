version: "3.8"
services:
  {{ mongo_service }}:
    image: {{ docker_image_mongo }}
    environment:
      - MONGO_INITDB_ROOT_USERNAME={{ mongo_user }}
      - MONGO_INITDB_ROOT_PASSWORD={{ mongo_pass }}
    volumes:
      - mongo_data:/data/db
      - mongo_config:/data/configdb
    restart: unless-stopped
    networks:
      - default

  {{ postgres_etl_service }}:
    image: {{ docker_image_postgres }} 
    environment:
      - POSTGRES_DB={{ postgres_etl_name }}
      - POSTGRES_USER={{ postgres_etl_user }}
      - POSTGRES_PASSWORD={{ postgres_etl_pass }}
    volumes:
      - pg_etl_data:/var/lib/postgresql/data/
    restart: unless-stopped
    networks:
      - default

  {{ postgres_backend_service }}:
    image: {{ docker_image_postgres }} 
    environment:
      - POSTGRES_DB={{ postgres_backend_name }}
      - POSTGRES_USER={{ postgres_backend_user }}
      - POSTGRES_PASSWORD={{ postgres_backend_pass }}
    volumes:
      - pg_backend_data:/var/lib/postgresql/data/
    restart: unless-stopped
    networks:
      - default

  {{ redis_service }}:
    image: {{ docker_image_redis }}
    volumes:
      - redis_data:/data
    restart: unless-stopped
    networks:
      - default

volumes:
  mongo_data:
  mongo_config:
  pg_etl_data:
  pg_backend_data:
  redis_data:
