services:
  {{ mongo_service }}:
    image: {{ docker_image_mongo }}
    environment:
      - MONGO_INITDB_ROOT_USERNAME={{ mongo_user }}
      - MONGO_INITDB_ROOT_PASSWORD={{ mongo_pass }}
    volumes:
      - mongo_data:/data/db
      - mongo_config:/data/configdb
    restart: unless-stopped
    networks:
      - default

  {{ postgres_etl_service }}:
    image: {{ docker_image_postgres }} 
    environment:
      - POSTGRES_DB={{ postgres_etl_name }}
      - POSTGRES_USER={{ postgres_etl_user }}
      - POSTGRES_PASSWORD={{ postgres_etl_pass }}
      - PGPORT={{ postgres_etl_port }}
    expose:
      - "{{ postgres_etl_port }}"
    volumes:
      - pg_etl_data:/var/lib/postgresql/data/
    restart: unless-stopped
    networks:
      - default

  {{ postgres_service }}:
    image: {{ docker_image_postgres }} 
    environment:
      - POSTGRES_DB={{ postgres_name }}
      - POSTGRES_USER={{ postgres_user }}
      - POSTGRES_PASSWORD={{ postgres_pass }}
      - PGPORT={{ postgres_port }}
    expose:
      - "{{ postgres_port }}"
    volumes:
      - pg_data:/var/lib/postgresql/data/
    restart: unless-stopped
    networks:
      - default

  {{ redis_service }}:
    image: {{ docker_image_redis }}
    volumes:
      - redis_data:/data
    restart: unless-stopped
    networks:
      - default

volumes:
  mongo_data:
  mongo_config:
  pg_data:
  pg_etl_data:
  redis_data:
